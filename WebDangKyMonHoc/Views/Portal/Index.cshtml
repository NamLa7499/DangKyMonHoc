@model WebDangKyMonHoc.Models.SinhVien
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPortal.cshtml";
}

<div class="row justify-content-md-start">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Wellcome to,
            </div>

            <div class="card-body">
                <img src="~/Images/truong.jpg"/>
                @if (Session["MaSV"] != null)
                {
                    <p>Mã Sinh Viên: @Session["MaSV"].ToString()</p>
                    <p>Tên: @Session["TenSV"].ToString()</p>
                    <p>Mã Lớp :@Session["MaLop"].ToString() </p>
                    <p>Tên Lớp :@Session["TenLop"].ToString() </p>
                    <a href="@Url.Action("Logout","Portal")" class="btn btn-warning">Logout</a>
                }
            </div>
        </div>

    </div>
</div>

